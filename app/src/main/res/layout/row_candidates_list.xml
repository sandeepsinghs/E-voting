<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="8dp"
cardview:cardUseCompatPadding="true"
cardview:contentPadding="15dp"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="2"
        app:civ_shadow_color="@color/colorPrimaryDark"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgSymbol" />


     <TextView
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"

         android:text="Candidate Name"
         android:gravity="center|top"
         android:typeface="serif"
         android:textAllCaps="true"

         android:textSize="18sp"
         android:textStyle="bold"
         android:id="@+id/txtCandidateName" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_color="#fff"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="2"
                app:civ_shadow_color="@color/colorPrimaryDark"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgCandidatePic" />



        </LinearLayout>

   <TextView
       android:layout_marginTop="5dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider"
       android:backgroundTint="@color/colorPrimaryDark"
       />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
  <TextView
      android:layout_width="70dp"
      android:layout_height="wrap_content"
      android:text="Mo No : "
      android:typeface="serif"
      android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:typeface="serif"
        android:textSize="14dp"
        android:id="@+id/txtCandidatePhone" />




</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:typeface="serif"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kondawa"
                android:typeface="serif"
                android:textSize="14dp"
                android:id="@+id/txtCandidateAddress" />




        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.6"

        android:gravity="center"
        android:layout_height="wrap_content">

   <android.support.v7.widget.CardView
       android:layout_width="100dp"
       android:layout_height="100dp"
       cardview:cardCornerRadius="2dp"
       cardview:cardElevation="8dp"
       cardview:cardUseCompatPadding="true"
       cardview:contentPadding="2dp"
       android:id="@+id/cardVote"
       android:layout_margin="5dp"

       >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:src="@drawable/ic_vote"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Vote"
              android:typeface="serif"
              android:gravity="center"
              />

      </LinearLayout>




   </android.support.v7.widget.CardView>


    </LinearLayout>



        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>